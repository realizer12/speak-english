<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/teacherprofile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="-20dp"
        android:clickable="true"
        android:contentDescription="adasdasd"
        android:paddingTop="8dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/teacheremail_nav_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/juache"
        android:hint="teacher email"
        android:paddingTop="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fcfcfc" />

    <TextView
        android:id="@+id/teacher_englishname_nav_head"
        android:layout_width="93dp"
        android:layout_height="26dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/juache"
        android:hint="teacher name"
        android:textColor="#fcfcfc" />

    <TextView
        android:id="@+id/textView134"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-100dp"
        android:fontFamily="@font/juache"
        android:text="   Click image to update it"
        android:textSize="15dp" />

</LinearLayout>