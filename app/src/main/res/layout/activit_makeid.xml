<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:layout_weight="0.5"
        android:background="#1863c5"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/makeidforstudent"
            android:layout_width="match_parent"
            android:fontFamily="@font/juache"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#fbf8f8"
            android:text="학생 회원가입" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/juache"
            android:textAlignment="center"
            android:textColor="#faf7f7"
            android:text="sutudent membership" />

        <Button
            android:id="@+id/studentbtn"
            android:layout_width="277dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton"
            android:fontFamily="@font/juache"
            android:text="회원가입"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="310dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/makeidforteacher"
            android:layout_width="match_parent"
            android:fontFamily="@font/juache"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="강사 회원가입"
            android:textColor="#000"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView6"
            android:textSize="30dp"
            android:fontFamily="@font/juache"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="teacher membership" />

        <Button
            android:id="@+id/teacherbtn"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundbuttonforteacher"
            android:fontFamily="@font/juache"
            android:text="회원가입"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>