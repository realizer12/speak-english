<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/juache"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=" My OpenChatting Room "
        android:textColor="#000"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/open_chatting_room_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/roundedittext"
        android:gravity="center"
       >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            android:background="@drawable/border"
            android:backgroundTint="#1863c5"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/open_chatting_profile_image"
            android:layout_width="61dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_height="63dp"
            android:background="@drawable/sayhellologowhite"
            />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/open_chatting_student_namelist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/juache"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/open_chatting_student_number"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/juache"
                    android:gravity="center_vertical"
                    android:textColor="#7A7878" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/open_chatting_recent_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/juache"
                    android:gravity="bottom"
                    android:text="2019-10-23"
                    android:textColor="#7A7878"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/open_chatting_recent_message"
                    android:layout_width="244dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/juache"
                    android:gravity="center_vertical"
                    android:text="내용"
                    android:textColor="#7A7878"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/open_chatting_unread_count"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:background="@drawable/roundimage"
                    android:backgroundTint="#EB0A0A"
                    android:fontFamily="@font/juache"
                    android:gravity="center"
                    android:minWidth="22dp"
                    android:maxWidth="35dp"
                    android:padding="5dp"
                    android:text="1"
                    android:textColor="#FAF7F7"
                    android:textSize="11sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/juache"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="  1:1 Messenger with Student "
        android:textColor="#000"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/one_to_one_message_recyclerview"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>