<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView56"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@drawable/border"
        android:fontFamily="@font/juache"
        android:gravity="center"
        android:text="Give Feedback to you student!"
        android:textColor="#000"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/std_profile"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/std_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/juache"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText_for_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:minHeight="190dp"
        android:maxHeight="380dp"
        android:ems="10"
        android:hint="write any feed back to your student !!"
        android:inputType="textMultiLine"
        android:maxLines="20"
        android:maxLength="100"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text=""
        android:textColor="#000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button_for_give_feedback"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/juache"
        android:text="Finish"
        android:textSize="15sp" />
</LinearLayout>