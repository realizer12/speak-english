<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1863c3">

        <TextView
            android:id="@+id/textView8"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/juache"
            android:text="학생 회원가입 창"
            android:textAlignment="center"
            android:textColor="#f6f4f4"
            android:textSize="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emaillabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/juache"
            android:text="Email"
            android:textColor="#000"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/studentemail"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/juache"
            android:hint="  사용하는 이메일을 써주세요!"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColorHint="#686565"
            android:textSize="15dp" />

        <Button
            android:id="@+id/checkemail"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="30dp"
            android:background="@drawable/stylebtnforcheckid"
            android:fontFamily="@font/juache"
            android:text="메일인증"
            android:textColor="#f5f0f0"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mentforcheckedemail"
        android:layout_marginLeft="-15dp"
        android:fontFamily="@font/juache"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:textColor="#08792f"
        android:visibility="invisible"
        android:textSize="15dp"
        android:text="수정 하면 인증이 풀립니다!" />

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/juache"
            android:id="@+id/passwdlabel"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:text="PW"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/studentpasswd"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:hint="  비밀번호를 써주세요!  (영어,숫자)"
            android:textColor="#000"
            android:textColorHint="#686565"
            android:textSize="15dp"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="326dp"
        android:layout_gravity="center"
        android:layout_height="43dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/passwdchecklabel"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/juache"
            android:text="PW CHECK"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/studentpasswdcheck"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:hint="  비밀번호를 확인하세요!"
            android:inputType="textPassword"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#686565"
            android:textSize="15dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enlgishnamelabel"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/juache"
            android:text="Enligh   name"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/enlgishname"
            android:layout_width="281dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/juache"
            android:hint="  영어이름을   쓰세요! (영어만)"
            android:inputType="textPersonName"
            android:text=""

            android:textColorHint="#686565"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="326dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/finalmakestudentidbtn"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbuttonforteacher"
            android:fontFamily="@font/juache"
            android:text="가입 완료"
            android:layout_marginRight="20dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/makestudentidcancel"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbuttonforteacher"
            android:fontFamily="@font/juache"
            android:text="취소"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>