<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_for_exchange_point"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@drawable/myclass" />

    <ImageView
        android:id="@+id/btn_for_refresh_exchange_activity"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998"
        app:srcCompat="@drawable/refresh1" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/juache"
        android:padding="2dp"
        android:text="Exchange point"
        android:textColor="#fff"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_for_exchange_point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="@+id/toolbar_for_exchange_point"
        app:layout_constraintTop_toTopOf="@+id/toolbar_for_exchange_point"
        app:layout_constraintVertical_bias="0.32" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_past_exchange_info"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="342dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_for_exchange_point">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:fontFamily="@font/juache"
                android:gravity="center"
                android:text="My Retention Point : "
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/show_teacher_point_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/juache"
                android:gravity="center"
                android:text=" 50 points"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_for_exchange_point"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbutton"

            android:fontFamily="@font/juache"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Click  here to Exchange Point" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView67"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="#1A5BA9"
        android:fontFamily="@font/juache"
        android:gravity="center"
        android:text="List of Exchange  My point"
        android:textColor="#FDFDFD"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="#1A5BA9"
        app:layout_constraintBottom_toTopOf="@+id/show_past_exchange_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView67"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView71"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:padding="5dp"
            android:text="Point "
            android:background="@drawable/border"
            android:textColor="#0C0000" />

        <TextView
            android:id="@+id/textVfiew71"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:padding="5dp"
            android:text="Money "
            android:background="@drawable/border"
            android:textColor="#0C0000"/>

        <TextView
            android:id="@+id/textdView71"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:padding="5dp"
            android:text="Bank Account"
            android:textColor="#0C0000" />

        <TextView
            android:id="@+id/textdVidew71"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:padding="5dp"
            android:text="status"
            android:textColor="#0C0000" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>