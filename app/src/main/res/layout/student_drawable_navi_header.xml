<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/studentprofile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="-20dp"
        android:clickable="true"
        android:contentDescription="adasd"
        android:paddingTop="8dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/studentemail_nav_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/juache"
                android:hint="학생 이메일"
                android:paddingTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fcfcfc" />

            <TextView
                android:id="@+id/englishname_nav_head"
                android:layout_width="93dp"
                android:layout_height="26dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/juache"
                android:hint="학생 영어이름"
                android:textColor="#fcfcfc" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-122dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/txt_for_show_point_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/juache"
            android:padding="5dp"
            android:text="현재 포인트 : 0 p"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btn_for_charging_point"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/roundbutton"
            android:fontFamily="@font/juache"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="포인트 충전하기"
            android:textColor="#000" />
    </LinearLayout>

</LinearLayout>