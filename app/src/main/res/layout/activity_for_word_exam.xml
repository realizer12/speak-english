<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#E81863C5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_for_cancel_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@android:drawable/ic_delete" />

        <TextView
            android:id="@+id/text_view_for_time_watch"
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:paddingTop="2dp"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:textSize="25sp"
            android:text=""
            android:textColor="#F8F7F7" />

        <TextView
            android:id="@+id/txt_show_position_for_exam_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:fontFamily="@font/juache"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingLeft="60dp"
            android:text="1/10" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_for_question"
            android:layout_width="350dp"
            android:layout_height="299dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="#110F01"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:text="뜻 들어감"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_for_correct"
            android:layout_width="350dp"
            android:layout_height="299dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="#0A0000"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="O"
            android:textColor="#0DE014"
            android:textSize="130dp"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/textview_for_wrong"
            android:layout_width="350dp"
            android:layout_height="299dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="#0A0000"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="X"
            android:textColor="#E20A4E"
            android:textSize="130dp"
            tools:visibility="invisible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_word"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/second_word"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/third_word"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/forth_word"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:fontFamily="@font/juache"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>