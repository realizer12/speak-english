<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receievechat_entire_layout_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:gravity="right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receiver_chat_watcher_count_video"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="1"
                android:textColor="#FFFFFF00"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/recieve_chatpresenttime_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                >

                <VideoView
                    android:id="@+id/receive_video_view"
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    />

                <ImageView
                    android:id="@+id/receieve_video_chat_playbtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/ic_media_play" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>