<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receievechat_entire_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:gravity="right">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receiver_chat_watcher_count"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:textColor="#FFFFFF00"
            android:gravity="right"
            android:text="1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/recieve_chatpresenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/receivechatcontent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/normalchattingui"
                android:backgroundTint="#FDEA33"
                android:fontFamily="@font/juache"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:maxWidth="200dp"
                android:minWidth="30dp"
                android:textColor="#000"
                android:textSize="18sp"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/receivechatcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/receivemessagegui"
                android:backgroundTint="#FDEA33"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/juache"
                android:gravity="left|center_vertical"
                android:layout_gravity="right"
                android:maxWidth="200dp"
                android:minWidth="30dp"
                android:textColor="#000"
                android:textSize="18sp"
                tools:visibility="visible" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>